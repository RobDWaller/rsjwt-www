{
    "name": "rbdwllr/rsjwt-www",
    "description": "A JWT Token Builder Tool.",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Rob Waller",
            "email": "rdwaller1984@gmail.com"
        }
    ],
    "require": {
        "php": "^7.4",
        "bref/bref": "^1.2",
        "slim/slim": "^4.7",
        "slim/psr7": "^1.3",
        "rbdwllr/reallysimplejwt": "^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "guzzlehttp/guzzle": "^7.3",
        "phpstan/phpstan": "^0.12",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "RSJWT\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "pipeline": [
            "vendor/bin/phpcs --standard=psr12 src/ tests/",
            "vendor/bin/phpstan analyse -l 8 src/ tests/"
        ]
    }
}
